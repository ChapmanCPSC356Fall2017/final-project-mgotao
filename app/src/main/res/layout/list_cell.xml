<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#CCCAC8"
    android:layout_gravity="center_horizontal"
    android:layout_margin="8dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/cellPic"
        android:src="@drawable/ic_list_country_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"/>
    
    <TextView
        android:id="@+id/cellCode"
        android:layout_toRightOf="@+id/cellPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ABC"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/cellName"
        android:layout_toRightOf="@id/cellCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="This is my currency"
        android:textColor="#000"
        android:textSize="18sp"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginTop="8dp"/>
</RelativeLayout>